[color]
  ui = auto
[push]
  default = simple
  followTags = true
[core]
  excludesfile = ~/.gitignore
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch]
  autosetuprebase = always
[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  less = log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset'
  summary = log --pretty='format:%Cgreen%h %Cred%ai %Cgreen%an %Creset- %s'
  more = log --decorate --graph
